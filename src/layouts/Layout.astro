import { SITE } from "../config"

export interface Props {
  title?: string;
  author?: string;
  description?: string;
  ogImage?: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html>
  <head>
<script async src="https://www.googletagmanager.com/gtag/js?id=G-PGWGR7WLFJ"></script>
<script>
  window.dataLayer = window.dataLayer || [];
